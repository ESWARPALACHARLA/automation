{
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "baseBranches": ["main"],
  "schedule": [
    "before 5pm"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["pin", "digest"],
      "groupName": "Vulnerable Dependencies",
      "updateTypes": ["versioning"],
      "packagePatterns": [
        "^.*$"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
